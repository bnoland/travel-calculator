<form>
  <div class="row mb-3">
    <label for="year" class="col-lg-4 col-form-label"> Select year:</label>
    <div class="col-lg-8">
      <select id="year" class="form-select">
        <option value="">Select year</option>
      </select>
    </div>
  </div>
  <div class="row mb-3">
    <label for="facility-type" class="col-lg-4 col-form-label">
      Select facility type:
    </label>
    <div class="col-lg-8">
      <select id="facility-type" class="form-select">
        <option value="">Select facility type</option>
      </select>
    </div>
  </div>
  <div class="row mb-3">
    <label for="msa" class="col-lg-4 col-form-label">
      Select metropolitan statistical area (MSA):
    </label>
    <div class="col-lg-8">
      <select id="msa" class="form-select">
        <option value="">Select MSA</option>
      </select>
    </div>
  </div>
  <div class="row mb-3">
    <label for="miles" class="col-lg-4 col-form-label">
      Input total lane miles added:
    </label>
    <div class="col-lg-8">
      <div class="input-group">
        <input id="miles" type="text" class="form-control" />
        <span class="input-group-text">miles</span>
      </div>
    </div>
  </div>
  <div class="d-flex justify-content-center mt-4">
    <button type="submit" class="btn btn-primary">
      Calculate Induced Travel
    </button>
  </div>
</form>
